<h1>New Player</h1>

<div class="container"><%= form_with scope: :player, url: players_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :age %><br>
	<%= form.number_field :age %>
  </p>

  <p>
    <%= form.label :photo %><br>
	<%= form.file_field :picture %>
  </p>
 
  <p>
    <%= form.submit :class => 'btn waves-effect waves-light' %>
  </p>
<% end %></div>